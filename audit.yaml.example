# Example audit.yaml configuration for ProjectAuditAgent
# Place this file in the root of your project to customize analysis

audit:
  # Paths to exclude from analysis
  exclude:
    - "migrations/"
    - "legacy/"
    - "vendor/"
    - "build/"
    - "dist/"
    - "docs/_build/"
  
  # Analysis thresholds
  thresholds:
    complexity: 10          # Max cyclomatic complexity before flagging
    maintainability: 20     # Min maintainability index (0-100)
    type_coverage: 50       # Min type hint coverage percentage
    test_coverage: 80       # Min test coverage percentage
  
  # Tool-specific configuration
  tools:
    deadcode:
      enabled: true
      min_confidence: 80    # Vulture confidence threshold (0-100)
    
    complexity:
      enabled: true
      show_all: false       # Only show functions above threshold
      max_complexity: 15    # Flag functions with CC > this value
    
    security:
      enabled: true
      bandit_severity: MEDIUM  # Minimum severity: LOW, MEDIUM, HIGH
      check_dependencies: true  # Run pip-audit
    
    typing:
      enabled: true
      ignore_private: true  # Ignore functions starting with _
      min_coverage: 50      # Minimum acceptable coverage %
    
    tests:
      enabled: true
      min_coverage: 80      # Minimum test coverage percentage
      require_unit: true    # Require unit tests
      require_integration: false
    
    duplication:
      enabled: true
      similarity_threshold: 80  # Minimum similarity % to flag (0-100)
      min_lines: 5          # Minimum lines to consider
    
    architecture:
      enabled: true
      check_fastapi: true   # Check FastAPI-specific patterns
      check_circular: true  # Check for circular imports
    
    structure:
      enabled: true
      max_depth: 4          # Max directory tree depth
    
    cleanup:
      enabled: true
      show_size: true       # Show sizes of cleanable items
    
    gitignore:
      enabled: true
      auto_detect: true     # Auto-detect project type
